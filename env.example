# Configurações do Sistema de Relatórios
# Copie este arquivo para .env e preencha com seus valores

# Chave secreta para sessões Flask (obrigatória)
SECRET_KEY=sua-chave-secreta-aqui

# Configurações do Supabase (obrigatórias)
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua-chave-anon-do-supabase

# Configurações opcionais
FLASK_ENV=production
FLASK_DEBUG=False
LOG_LEVEL=INFO

# Configurações de WhatsApp (opcionais)
WHATSAPP_API_KEY=sua-chave-api-whatsapp
WHATSAPP_PHONE_NUMBER=5511999999999

# Configurações de segurança (opcionais)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
